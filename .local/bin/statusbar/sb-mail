#!/bin/sh

# Displays number of unread mail and an loading icon if updating.
# When clicked, brings up `neomutt`.

case $BLOCK_BUTTON in
	1) setsid -f st -e neomutt ;;
	3) setsid -f mailsync >/dev/null && notify-send "ðŸ“¬Syncing mail";;
	2) notify-send "ðŸ“¬ Mail module" "\- Shows unread mail
- Shows ðŸ”ƒ if syncing mail
- Left click opens neomutt
- Middle click syncs mail" ;;
	6) st -e nvim "$0" ;;
esac

unread="$(find "${XDG_DATA_HOME:-$HOME/.local/share}"/mail/*/[Ii][Nn][Bb][Oo][Xx]/new/* -type f | wc -l 2>/dev/null)"

pidof mbsync >/dev/null 2>&1 && icon="ðŸ”ƒ"

[ "$unread" = "0" ] && [ "$icon" = "" ] || echo "ïŠ¶ $unread$icon"
# [ "$unread" = "0" ] && [ "$icon" = "" ] || echo "ðŸ“¬$unread$icon"
